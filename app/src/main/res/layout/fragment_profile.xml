<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="profileView"
            type="com.mamits.zini24user.viewmodel.fragment.ProfileFragmentViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Basic informations"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:fontName="Poppins-Bold.ttf" />

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/edit" />
            </RelativeLayout>


            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.7"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Medium.ttf" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/phone"
                    app:tint="@color/black" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/txt_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Medium.ttf" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/email"
                    app:tint="@color/black" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Medium.ttf" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/key"
                    app:tint="@color/black" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/btn_change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:background="@drawable/rec_border_box"
                    android:padding="@dimen/_10sdp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Medium.ttf" />
            </LinearLayout>

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.7"
                android:text="Help"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="Help and support"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:fontName="Poppins-Medium.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.7"
                android:text="Enquiry"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_enquiry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="Support"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                app:fontName="Poppins-Medium.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="Share Application"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_tc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="About us"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Bold.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/places_autocomplete_separator" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>