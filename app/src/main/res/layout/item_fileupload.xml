<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_file_upload_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_file_cust_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/text_file_upload_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="Choose Aadhar File"
                android:textColor="@color/quantum_grey"
                app:fontName="Poppins-Medium.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/text_file_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:padding="@dimen/_15sdp"
                    android:text="Choose Aadhar File"
                    android:textColor="@color/black"
                    app:fontName="Poppins-Regular.ttf" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/text_file_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_orange"
                    android:gravity="center"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="Upload"
                    android:textColor="@color/white"
                    app:fontName="Poppins-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_file"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/orange_ff9b44"
                android:visibility="gone">

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/text_filename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_weight="8"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/_15sdp"
                    android:text="Choose Aadhar File"
                    android:textColor="@color/black"
                    app:fontName="Poppins-Regular.ttf" />

                <ImageView
                    android:id="@+id/image_file_close"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:srcCompat="@drawable/close" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>