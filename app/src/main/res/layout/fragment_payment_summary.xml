<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="paymentSummaryFragmentView"
            type="com.mamits.zini24user.viewmodel.fragment.PaymentSummaryFragmentViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragmentDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dim_white"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_100sdp">

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/img"
                    android:orientation="vertical">

                    <com.mamits.zini24user.ui.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Payment Summary"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/_16ssp"
                        app:fontName="Poppins-Medium.ttf" />

                    <com.mamits.zini24user.ui.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Here is complete payment summary for your order."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:fontName="Poppins-Regular.ttf" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/dash_path_img" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_top"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@color/dark_pink_ffebdf"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_20sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_2sdp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_15sdp">

                            <ImageView
                                android:id="@+id/img_service_cat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/_15sdp" />
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@id/card">

                            <com.mamits.zini24user.ui.customviews.CustomTextView
                                android:id="@+id/txt_service_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Government jobs"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13ssp"
                                app:fontName="Poppins-Medium.ttf" />

                            <com.mamits.zini24user.ui.customviews.CustomTextView
                                android:id="@+id/txt_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_service_name"
                                android:maxLines="2"
                                android:text="Apply for latest Government."
                                android:textColor="@color/black_2a2a2a"
                                android:textSize="@dimen/_10ssp"
                                app:fontName="Poppins-Regular.ttf" />
                        </RelativeLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_top"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@color/dark_pink_ffebdf"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_20sdp"
                        android:orientation="vertical">

                        <com.mamits.zini24user.ui.customviews.CustomTextView
                            android:id="@+id/txt_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APPRRBX9836"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Poppins-Medium.ttf" />

                        <com.mamits.zini24user.ui.customviews.CustomTextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ravikant Verma"
                            android:textColor="@color/color_orange"
                            android:textSize="@dimen/_15ssp"
                            app:fontName="Poppins-Medium.ttf" />

                        <com.mamits.zini24user.ui.customviews.CustomTextView
                            android:id="@+id/txt_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="+91 645 456 6458"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:fontName="Poppins-Medium.ttf" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30sdp">

                            <com.mamits.zini24user.ui.customviews.CustomTextView
                                android:id="@+id/label_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.5"
                                android:text="Apply Coupon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp"
                                app:fontName="Poppins-Regular.ttf" />

                            <com.mamits.zini24user.ui.customviews.CustomTextView
                                android:id="@+id/select_coupon"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/button_grey"
                                android:backgroundTint="@color/color_orange"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="View all coupons"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.mamits.zini24user.ui.customviews.CustomInputEditText
                                android:id="@+id/et_coupon"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_toStartOf="@+id/btn_delete_coupon"
                                android:background="@null"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@drawable/cursor_color" />

                            <ImageView
                                android:id="@+id/btn_delete_coupon"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/close"
                                android:visibility="gone" />
                        </RelativeLayout>


                        <View
                            android:id="@+id/v_num"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_apply_coupon"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="@color/black"
                                android:minWidth="@dimen/_100sdp"
                                app:cardCornerRadius="@dimen/_25sdp">

                                <com.mamits.zini24user.ui.customviews.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Apply"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp"
                                    app:fontName="Poppins-Regular.ttf" />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="@dimen/_30sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerView_order_history"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    tools:itemCount="3"
                                    tools:listitem="@layout/payment_summary_item" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp">

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:id="@+id/text_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@id/text_price"
                                        android:text="Name"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp" />

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:id="@+id/text_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:text="- ₹ 100.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp" />
                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp">

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@id/text_coupon_price"
                                        android:text="Coupon Applied"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:id="@+id/text_coupon_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:text="- ₹ 100.00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/black" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_8sdp">

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toStartOf="@id/text_total_price"
                                        android:text="Total"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <com.mamits.zini24user.ui.customviews.CustomTextView
                                        android:id="@+id/text_total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:text="₹ 2,499.36"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.mamits.zini24user.ui.customviews.CustomTextView
            android:id="@+id/text_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/message_from_box_shape"
            android:backgroundTint="@color/color_orange"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Proceed To Checkout"
            android:textColor="@color/white"
            app:fontName="Poppins-Medium.ttf" />

    </RelativeLayout>

</layout>