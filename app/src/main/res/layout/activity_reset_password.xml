<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="resetView"
            type="com.mamits.zini24user.viewmodel.activity.ResetPasswordViewModel" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/zini_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/img_logo"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="bottom"
                android:orientation="vertical">


                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25ssp"
                    app:fontName="Poppins-Bold.ttf" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Enter you nre password."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Regular.ttf" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/label_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:alpha="0.5"
                    android:text="New Password*"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Regular.ttf" />

                <com.mamits.zini24user.ui.customviews.CustomInputEditText
                    android:id="@+id/et_new"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@null"
                    android:inputType="numberPassword"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_color" />

                <View
                    android:id="@+id/v_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black" />

                <com.mamits.zini24user.ui.customviews.CustomTextView
                    android:id="@+id/label_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:alpha="0.5"
                    android:text="Confirm Password*"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:fontName="Poppins-Regular.ttf" />

                <RelativeLayout
                    android:id="@+id/rl_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <com.mamits.zini24user.ui.customviews.CustomInputEditText
                        android:id="@+id/et_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </RelativeLayout>

                <View
                    android:id="@+id/v_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <com.mamits.zini24user.ui.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        app:fontName="Poppins-Medium.ttf" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</layout>