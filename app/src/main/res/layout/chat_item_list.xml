<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:backgroundTint="@color/pink_fff7f2"
    app:cardCornerRadius="@dimen/_30sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/card_img"
            android:layout_alignBottom="@id/card_img"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_toStartOf="@id/rl_time"
            android:layout_toEndOf="@id/card_img"
            android:gravity="center_vertical">

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Manish Kumar"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:fontName="Poppins-Medium.ttf" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/txt_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_user_name"
                android:singleLine="true"
                android:text="Order ID : 7672"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:fontName="Poppins-Regular.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/rl_msg"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:gravity="center_vertical">

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Oct 2021"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:fontName="Poppins-Regular.ttf" />

            <com.mamits.zini24user.ui.customviews.CustomTextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date"
                android:layout_alignEnd="@id/txt_date"
                android:text="02 : 56 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                app:fontName="Poppins-Regular.ttf" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>